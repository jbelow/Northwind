@model Northwind.Model.Customer

<h4>Add Customer</h4>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.CompanyName">Company Name </label>
            <input asp-for="@Model.CompanyName" class="form-control" placeholder="Company Name" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Address">Address</label>
            <input asp-for="@Model.Address" class="form-control" placeholder="Address" />
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.City">City</label>
            <input asp-for="@Model.City" class="form-control" placeholder="City" />
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.Region">Region</label>
            <input asp-for="@Model.Region" class="form-control" placeholder="Region" />
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.PostalCode">Postal Code</label>
            <input asp-for="@Model.PostalCode" class="form-control" placeholder="Postal Code" />
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.Country">Country</label>
            <input asp-for="@Model.Country" class="form-control" placeholder="Country" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Phone">Phone</label>
            <input asp-for="@Model.Phone" class="form-control" placeholder="Phone" />
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.Fax">Fax</label>
            <input asp-for="@Model.Fax" class="form-control" placeholder="Fax" />
        </div>
    </div>


